<launch>
  <arg name="laser"/>
  <arg name="base_type" default="pmb2"/>

  <rosparam param="laser_model" subst_value="True">$(arg laser)</rosparam>

  <include unless="$(eval arg('base_type') == 'omni_base')" file="$(find tiago_laser_sensors)/launch/base_laser.launch">
    <arg name="laser" default="$(arg laser)"/>
  </include>

  <include if="$(eval arg('base_type') == 'omni_base')" file="$(find omni_base_laser_sensors)/launch/base_laser.launch">
    <arg name="laser" default="$(arg laser)"/>
  </include>

</launch>

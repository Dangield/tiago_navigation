<launch>
  <node name="sick571" pkg="sick_tim" type="sick_tim551_2050001" clear_params="true">
    <rosparam file="$(find tiago_laser_sensors)/config/sick_tim571_laser.yaml" command="load"/>
    <remap from="scan" to="scan_raw"/>
  </node>
  
  <node name="laser_filter" pkg="laser_filters" type="scan_to_scan_filter_chain">
    <rosparam file="$(find tiago_laser_sensors)/config/laser_filter.yaml" command="load"/>
    <remap from="scan"          to="scan_raw"/>
    <remap from="scan_filtered" to="scan"/>
  </node>
</launch>

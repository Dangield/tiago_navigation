<launch>
  <arg name="camera" default="base_rgbd_camera"/>

  <rosparam command="load" file="$(find tiago_rgbd_sensors)/config/xtion_pro_live.yaml" ns="$(arg camera)"/>

  <include file="$(find openni2_launch)/launch/openni2.launch">
    <arg name="camera" value="$(arg camera)"/>

    <arg name="depth_registration" value="true"/>

    <arg name="load_driver" value="true"/>
    <arg name="publish_tf"  value="false"/>
    <arg name="respawn"     value="true"/>

    <arg name="rgb_camera_info_url" value="package://tiago_rgbd_sensors/config/xtion_pro_live_calibration.yaml"/>
  </include>
</launch>
